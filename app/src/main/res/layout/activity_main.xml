<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/item"
        android:layout_width="222dp"
        android:layout_height="29dp"
        android:fontFamily="@font/carter_one"
        android:gravity="center"
        android:text="What're we eating today?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item2"
        android:layout_width="222dp"
        android:layout_height="29dp"
        android:fontFamily="@font/carter_one"
        android:gravity="center"
        android:text="Welcome to Dinner Picker :)"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/SelectedFoodText"
        android:layout_width="257dp"
        android:layout_height="40dp"
        android:fontFamily="@font/carter_one"
        android:gravity="center"
        android:text="Burger"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.622" />

    <Button
        android:id="@+id/AddItem"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginBottom="128dp"
        android:onClick="AddItem"
        android:text="Add food item"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SelectedFoodText"
        app:layout_constraintVertical_bias="0.988" />

    <Button
        android:id="@+id/ClearList"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginBottom="84dp"
        android:onClick="ClearList"
        android:text="Clear default list"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/AddItem"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="412dp"
        android:layout_height="225dp"
        app:layout_constraintBottom_toTopOf="@+id/SelectedFoodText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.848"
        app:srcCompat="@drawable/black_dish" />

    <Button
        android:id="@+id/Decide"
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:onClick="Decide"
        android:gravity="center"
        android:padding="10dp"
        android:text="Decide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/newItem"
        android:layout_width="276dp"
        android:layout_height="42dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_background"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter food name here..."
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#A9A9A9"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/AddItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>